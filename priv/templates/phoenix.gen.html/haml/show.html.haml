%h2
  Show <%= template_singular %>

%ul
<%= for {k, _} <- attrs do %>
  %li
    %strong
      <%= Phoenix.Naming.humanize(Atom.to_string(k)) %>:
    = @<%= singular %>.<%= k %>
<% end %>

= link "Edit", to: <%= singular %>_path(@conn, :edit, @<%= singular %>)
= link "Back", to: <%= singular %>_path(@conn, :index)
