<.simple_form :let={f} for={@changeset} action={~p"<%= schema.route_prefix %>"}>
  <:title>New <%= schema.human_singular %></:title>
  <.error
    :if={@changeset.action == :insert}
    message="Oops, something went wrong! Please check the errors below."
  />
<%= for input <- inputs, input do %>
  <%= input %>
<% end %>
  <:confirm>Save</:confirm>
</.simple_form>

<span><.link href={~p"<%= schema.route_prefix %>"}>Back</.link></span>
